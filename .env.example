# ============================================================================
# SUPABASE CONFIGURATION (New - Primary Database)
# ============================================================================

# Supabase Client (Public - safe to commit)
# These values are visible to the browser and must NOT contain secrets
# Get these from your Supabase project settings: https://app.supabase.com
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Supabase Service Role (PRIVATE - NEVER COMMIT)
# This key bypasses Row Level Security (RLS) - use with extreme caution
# Only use in API routes and server-side code
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ============================================================================
# FIREBASE CONFIGURATION (Legacy - Will be removed after migration)
# ============================================================================

# Firebase Client SDK (Public - safe to commit)
# These values are visible to the browser and must NOT contain secrets
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin SDK (PRIVATE - NEVER COMMIT)
# These credentials must ONLY be in .env.local and never committed to git
# Get these from Firebase Console > Project Settings > Service Account
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000

# Gamification (optional)
# Set to true to use backend API for XP/badges, false for local Firestore
NEXT_PUBLIC_USE_BACKEND_GAMIFY=false

# Sentry Error Tracking (optional)
# Get your DSN from https://sentry.io after creating a project
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
